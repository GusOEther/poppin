rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false; // Secure by default
    }
    
    match /events/{eventId} {
      allow read: if true; // Publicly readable for the app
      allow write: if false; // Only written by service via Cloud Functions
    }
    
    match /cities/{cityId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
