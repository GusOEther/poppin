{
    "name": "Poppin Dev Container",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "poppin-dev",
    "workspaceFolder": "/app",
    "shutdownAction": "stopCompose",
    "forwardPorts": [
        8081,
        5001,
        8080,
        8085,
        4000
    ],
    "postCreateCommand": "cd functions && python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt python-dotenv firebase-admin google-genai",
    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "ms-python.python"
            ]
        }
    },
    "remoteEnv": {
        "GEMINI_API_KEY": "${localEnv:GEMINI_API_KEY}",
        "GOOGLE_APPLICATION_CREDENTIALS": "/app/functions/dummy_credentials.json",
        "FIRESTORE_EMULATOR_HOST": "localhost:8080",
        "PUBSUB_EMULATOR_HOST": "localhost:8085",
        "EXPO_PUBLIC_USE_EMULATOR": "true"
    }
}